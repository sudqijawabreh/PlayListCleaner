{
  "manifest_version": 2,

  "name": "Playlist Cleaner",
  "description": "Youtube playlist cleaner",
  "version": "0.5",
  "content_scripts": [
       {
           "matches": ["https://www.youtube.com/*"],
           "js": ["playlist.js"]
       }
   ],
  "browser_action": {
      //"default_icon": "logo.png",
      "default_title": "click to open curricula page"
  },
  "permissions": [
    "activeTab",
    "tabs",
     "http://*/*", "https://*/*"
  ]
}
